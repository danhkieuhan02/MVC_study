@model AppUser

@section scripts
	{
	<partial name="_Validation" />
}
<div class="row">
	<div class="col-md-6">
		<form method="post">
			<h3 class="mt-3 text-center">REGISTER</h3>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mt-3">
				<label class="form-label">Username</label>
				<input asp asp-for="Username" class="form-control" type="text" />
				<span asp-validation-for="Username" class="text-danger"></span>
			</div>
			<div class="mt-3">
				<label class="form-label">Password</label>
				<input asp-for="Password" class="form-control" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="mt-3">
				<label class="form-label">Confirm password</label>
				<input asp-for="Cfmpassword" class="form-control" type="password" />
				<span asp-validation-for="Cfmpassword" class="text-danger"></span>

			</div>
			<div class="mt-3">
				<label class="form-label">Phone Number</label>
				<input asp-for="PhoneNumber" class="form-control" type="number" />
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>

			</div>
			<div class="mt-3">
				<label class="form-label">Email</label>
				<input asp-for="Email" class="form-control" type="email" />
				<span asp-validation-for="Email" class="text-danger"></span>

			</div>
			<div class="mt-3">
				<label class="form-label">Address</label>
				<input asp-for="Address" class="form-control" type="text" />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
			<div class="btn">
				<input type="submit" name="Register" value="Register" class="btn btn-outline-success" />
			</div>
		</form>
	</div>
</div>
